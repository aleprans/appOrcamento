<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tbr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerardor de Orçamento"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNumOrcamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero do Orçamento" />

            <EditText
                android:id="@+id/edtNumeroOrcamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="number"
                android:maxLength="5"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/txtCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cliente" />

            <EditText
                android:id="@+id/edtCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="70"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/txtEquip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Equipamento / Embarcação" />

            <EditText
                android:id="@+id/edtEquip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/txtResp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Responsável" />

            <EditText
                android:id="@+id/edtResponsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="70"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/txtTitleServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="#4BFFE500"
                android:text="SERVIÇOS"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescServ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Descrição do Serviço" />

            <EditText
                android:id="@+id/edtServDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/txtQtde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Quantidade do Item " />

            <EditText
                android:id="@+id/edtQtdeServ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="number"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/txtValoUni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Valor Unitário" />

            <EditText
                android:id="@+id/edtValorUnitario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="number"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false" />

            <LinearLayout
                android:id="@+id/lytBtnServ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnIncServ"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFEB3B"
                    android:onClick="incluirServico"
                    android:text="Incluir + Serviços"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnLimpServ"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFEB3B"
                    android:onClick="limparArrayServico"
                    android:text="Limpar Serviços"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtTitleMateriais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="#4BFFE500"
                android:text="MATERIAIS"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMatDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição do Material" />

            <EditText
                android:id="@+id/edtDescMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/txtQtdeMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Quantidade de Material" />

            <EditText
                android:id="@+id/edtQtdeMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="number"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/txtValMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Valor Unitário do Material" />

            <EditText
                android:id="@+id/edtValMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/txtPrazoEntregaMat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Prazo entrega em dias" />

            <EditText
                android:id="@+id/edtPrazaoMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="number"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false" />

            <LinearLayout
                android:id="@+id/lytBtnMat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnIncMat"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFEB3B"
                    android:onClick="incluirMaterias"
                    android:text="Incluir + Materiais"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnLimpMat"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFEB3B"
                    android:onClick="limparArrayMateriais"
                    android:text="Limpar Materiais"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtDescritivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Descritivo dos serviços"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtDescritivo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="120"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/edtDescritivo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="120"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/edtDescritivo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="120"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/edtDescritivo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="120"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/txtPrazoEntregaServ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Prazo de entrga do Serviço em dias"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtPrazoEntServ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEB3B"
                android:ems="10"
                android:inputType="number"
                android:textColorHighlight="#FFE500"
                android:textColorHint="#FFEB3B"
                android:textColorLink="#FFEB3B"
                android:textIsSelectable="false" />

            <Button
                android:id="@+id/btnGerar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FFEB3B"
                android:onClick="gerarPDF"
                android:text="Gerar PDF"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>